<div style="background-image: url('<%= cl_image_path(@list.photo.key) if @list.photo.attached? %>')">
<h1><%= @list.name %></h1>
<h2>Bookmarks</h2>
<ul>
<% @bookmarks.each do |bookmark| %>
<li><%= bookmark.movie.title %>
<%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %></li>
<% end %>

</ul>

<%= link_to 'Add bookmark', new_list_bookmark_path(@list) %>

<br>
<%= link_to 'Back', lists_path %>
<%= button_to 'Delete List', list_path(@list), method: :delete, data: { confirm: "Are you sure you want to delete this list?" } %>
</div>
