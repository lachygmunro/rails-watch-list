<div class="movies">
<h1>Movies</h1>
<div class="movie-list">
<div class="row">
<% @movies.each do |movie| %>
<div class="col-md-3">
<div class="card">
  <img src="<%= movie.poster_url %>" class="card-img-top" alt="movie poster">
  <div class="card-body">
    <h5><%= movie.title %></h5>
    <p class="card-text"><%= movie.overview %></p>
    <p class="card-rating">Rating: <%= movie.rating %></p>
  </div>
</div>
</div>
<% end %>
</div>
</div>
</div>
